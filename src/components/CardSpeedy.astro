---
// Definimos las propiedades del componente
const { url = 'https://www.thecubicle.com/en-mx/collections/lube/products/lubicle-speedy', img = 'C:/Users/PC/Documents/Prueba-tecnica/public/speedy.jpg', title = 'Default title' } = Astro.props;
import { Image } from 'astro:assets';
import Speedy from '/Users/PC/Documents/Prueba-tecnica/public/speedy.jpg';
---

<div class="card">
  <div class="card__image">
    <Image src={Speedy} alt="" />
  </div>
  <div class="card__content">
    <h3>
      <a href={url}>{title}</a>
    </h3>
    <p>
      <slot>Lubricante serie premium TheCubicle Speedy</slot>
    </p>
  </div>
</div>

<style is:global>
  .card {
    display: flex;
    flex-direction: column;
    border: 1px solid black;
    border-radius: 0.5rem;
    max-width: 60ch;
    min-height: 100%;
    position: relative;
    overflow: hidden;
    transition: box-shadow 0.15s ease-in-out;
  }

  .card:hover,
  .card:focus-within {
    box-shadow: 0 0 0 0.25rem;
  }

  .card:focus-within a:focus {
    text-decoration: none;
    box-shadow: none;
    outline: none;
  }

  .card__image {
    height: 10rem;
  }

  .card__image img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  .card__content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    padding: 1rem;
  }

  .card__content a {
    text-decoration: none;
  }

  .card__content a:focus {
    text-decoration: underline;
  }

  .card__content a::after {
    content: '';
    position: absolute;
    inset: 0;
  }

  .card__content:last-child {
    margin-top: auto;
    padding-top: 2rem;
  }
</style>
